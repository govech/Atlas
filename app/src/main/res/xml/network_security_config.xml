<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 允许明文流量（仅用于开发环境，生产环境应移除） -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- 信任系统证书 -->
            <certificates src="system" />
            <!-- 信任用户安装的证书（用于调试） -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- 生产环境配置示例（禁用明文流量） -->
    <!--
