<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Atlas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 主题颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- 背景颜色 -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        
        <!-- 文本颜色 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- 状态栏和导航栏 -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.Atlas" parent="Base.Theme.Atlas" />
    
    <!-- 全屏主题 -->
    <style name="Theme.Atlas.FullScreen" parent="Theme.Atlas">
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- 透明主题 -->
    <style name="Theme.Atlas.Transparent" parent="Theme.Atlas">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>